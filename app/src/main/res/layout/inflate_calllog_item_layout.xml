<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="3dp">

    <FrameLayout
        android:id="@+id/frame_calllog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/imageView_CallLog_Header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView_CallLog_Warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_warning" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView_CallLog_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/frame_calllog"
        android:text="联系人姓名" />

    <ImageView
        android:id="@+id/imageView_CallLog_Going"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/frame_calllog"
        android:src="@drawable/ic_outgoing_call" />

    <TextView
        android:id="@+id/textView_CallLog_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView_CallLog_Going"
        android:text="联系人电话" />

    <TextView
        android:id="@+id/textView_CallLog_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="通话时间" />
</RelativeLayout>
